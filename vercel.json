{
  "functions": {
    "api/sitemap.xml.ts": {
      "maxDuration": 30
    },
    "api/regenerate-sitemap.ts": {
      "maxDuration": 10
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
